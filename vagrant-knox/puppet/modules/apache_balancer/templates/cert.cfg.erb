#RANDFILE                = $ENV::HOME/.rnd

[ req ]
default_bits            = 1024
default_md              = sha1
default_keyfile         = privkey
distinguished_name      = req_distinguished_name
prompt                  = no
req_extensions          = req_ext

[ req_distinguished_name ]
countryName                     = UA
stateOrProvinceName             = Here
localityName                    = Kiev
organizationName                = hortonworks.com
organizationalUnitName          = knox
commonName                      = balancer.hortonworks.com
emailAddress                    = contact@server.com

[ req_ext ]
subjectAltName = "DNS: a.com, DNS: b.com, DNS: c.com"